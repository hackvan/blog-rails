<%= form_with( model: post.comments.new, url: post_comments_path(post.id) ) do |f| %>
  <div class="form-group">
    <%= f.label :text, 'Nuevo comentario' %>
    <%= f.text_area :text, class: "form-control", placeholder: "Agregar comentario" %>
  </div>
  <div class="actions">
    <%= f.submit "Comentar", class: "btn btn-primary" %>
  </div>
<% end %>
